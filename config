[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
foreground-red = #FF6961
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python /home/jack/.config/polybar/polybar-spotify/spotify_status.py -t 42

format-underline = #1db954

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
